%table.table
  %thead
    %tr.skinny-black-border
      %td{:colspan => 5}
        %strong= t(:notifier)[:u_info]
    %tr
      %th.skinny-black-border= t(:mailer)[:user_modification]
      %th.skinny-black-border= t(:notifier)[:contact_info]
      %th.skinny-black-border= t(:notifier)[:role]
      %th.skinny-black-border= t(:mailer)[:proxy]
      - if !@protocol.selected_for_epic.nil?
        %th.skinny-black-border= t(:notifier)[:epic_access]
  %tbody
    %tr.skinny-black-border
      %td.skinny-black-border.center= @modified_user.full_name
      %td.skinny-black-border.center= @modified_user.email
      %td.skinny-black-border.center= @modified_user.project_roles.first.role.upcase
      %td.skinny-black-border.center= @modified_user.project_roles.first.display_rights
      - if !@protocol.selected_for_epic.nil?
        %td.skinny-black-border.center= @modified_user.project_roles.first.epic_access == true ? "Yes" : "No"